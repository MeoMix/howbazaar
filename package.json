{
	"name": "howbazaar",
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest",
		"generate-types": "npx quicktype src/lib/v2_Cards.json -o src/lib/v2_Cards.d.ts --just-types --prefer-unions && npx quicktype src/lib/v2_Monsters.json -o src/lib/v2_Monsters.d.ts --just-types --prefer-unions && npx quicktype src/lib/v2_DayHours.json -o src/lib/v2_DayHours.d.ts --just-types --prefer-unions",
		"preprocess-data": "TS_NODE_COMPILER_OPTIONS='{\"module\":\"ESNext\"}' tsx preprocess-data.ts",
		"rename-images": "TS_NODE_COMPILER_OPTIONS='{\"module\":\"ESNext\"}' tsx rename-images.ts",
		"consolidate-images": "TS_NODE_COMPILER_OPTIONS='{\"module\":\"ESNext\"}' tsx consolidate-images.ts",
		"upload-images": "TS_NODE_COMPILER_OPTIONS='{\"module\":\"ESNext\"}' tsx upload-images.ts"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"@vercel/blob": "^0.26.0",
		"autoprefixer": "^10.4.20",
		"dotenv": "^16.4.5",
		"postcss": "^8.4.47",
		"quicktype": "^23.0.170",
		"sharp": "^0.33.5",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^3.4.14",
		"tsx": "^4.19.2",
		"type-fest": "^4.26.1",
		"typescript": "^5.0.0",
		"vercel": "^37.14.0",
		"vite": "^5.0.3",
		"vitest": "^2.1.4"
	},
	"dependencies": {
		"@vercel/analytics": "^1.3.2",
		"flowbite": "^2.5.2",
		"flowbite-svelte": "^0.47.3",
		"flowbite-svelte-icons": "^2.0.2"
	}
}
