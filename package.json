{
	"name": "howbazaar",
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest",
		"generate-types": "npx quicktype scripts/parsers/data/cards.json -o scripts/parsers/data/cards.d.ts --just-types --prefer-unions && npx quicktype scripts/parsers/data/v2_Monsters.json -o scripts/parsers/data/v2_Monsters.d.ts --just-types --prefer-unions && npx quicktype scripts/parsers/data/v2_DayHours.json -o scripts/parsers/data/v2_DayHours.d.ts --just-types --prefer-unions",
		"parseGameJson": "tsx scripts/parseGameJson.ts",
		"generatePatchNotes": "tsx scripts/generatePatchNotes.ts",
		"processSkillImages": "tsx scripts/processSkillImages.ts",
		"processMonsterImages": "tsx scripts/processMonsterImages.ts",
		"processMerchantImages": "tsx scripts/processMerchantImages.ts",
		"processItemImages": "tsx scripts/processItemImages.ts",
		"upload:images": "tsx scripts/uploadImagesToBunnyCDN.ts",
		"pullLatestPatch": "tsx scripts/pullLatestPatch.ts",
		"pullLatestGame": "tsx scripts/pullLatestGame.ts",
		"generateMerchantFilterMapping": "tsx scripts/parsers/generateMerchantFilterMapping.ts"
	},
	"devDependencies": {
		"@sveltejs/adapter-vercel": "^5.7.0",
		"@sveltejs/kit": "^2.20.7",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@tailwindcss/vite": "^4.1.4",
		"@types/node-fetch": "^2.6.12",
		"@types/unzipper": "^0.10.11",
		"@types/xxhashjs": "^0.2.4",
		"axios": "^1.9.0",
		"dotenv": "^16.5.0",
		"fastest-levenshtein": "^1.0.16",
		"jest-diff": "^29.7.0",
		"node-fetch": "^3.3.2",
		"quicktype": "^23.0.175",
		"sharp": "^0.34.1",
		"svelte": "^5.28.2",
		"svelte-check": "^4.1.6",
		"tailwindcss": "^4.1.4",
		"tsx": "^4.19.3",
		"type-fest": "^4.40.0",
		"typescript": "^5.8.3",
		"unzipper": "^0.12.3",
		"vite": "^6.3.3",
		"vitest": "^3.1.2"
	},
	"dependencies": {
		"@vercel/analytics": "^1.5.0",
		"fast-json-stable-stringify": "^2.1.0",
		"flowbite": "^3.1.2",
		"flowbite-svelte": "^0.48.6",
		"flowbite-svelte-icons": "^2.1.1",
		"xxhashjs": "^0.2.2"
	}
}
