{
	"name": "howbazaar",
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest",
		"generate-types": "npx quicktype src/lib/parsers/patches/latest/v2_Cards.json -o src/lib/parsers/patches/latest/v2_Cards.d.ts --just-types --prefer-unions && npx quicktype src/lib/parsers/patches/latest/v2_Monsters.json -o src/lib/parsers/patches/latest/v2_Monsters.d.ts --just-types --prefer-unions && npx quicktype src/lib/parsers/patches/latest/v2_DayHours.json -o src/lib/parsers/patches/latest/v2_DayHours.d.ts --just-types --prefer-unions",
		"parseGameJson": "tsx scripts/parseGameJson.ts",
		"generatePatchNotes": "tsx scripts/generatePatchNotes.ts",
		"processSkillImages": "tsx scripts/processSkillImages.ts",
		"processMonsterImages": "tsx scripts/processMonsterImages.ts",
		"processItemImages": "tsx scripts/processItemImages.ts",
		"fetchCards": "tsx scripts/fetchCards.ts",
		"upload:images": "tsx scripts/uploadImagesToBunnyCDN.ts"
	},
	"devDependencies": {
		"@sveltejs/adapter-vercel": "^5.4.7",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"@types/node-fetch": "^2.6.12",
		"@types/xxhashjs": "^0.2.4",
		"autoprefixer": "^10.4.20",
		"axios": "^1.7.9",
		"dotenv": "^16.4.5",
		"fastest-levenshtein": "^1.0.16",
		"jest-diff": "^29.7.0",
		"postcss": "^8.4.47",
		"quicktype": "^23.0.170",
		"sharp": "^0.33.5",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^3.4.14",
		"tsx": "^4.19.2",
		"type-fest": "^4.26.1",
		"typescript": "^5.0.0",
		"vite": "^5.0.3",
		"vitest": "^2.1.4"
	},
	"dependencies": {
		"@vercel/analytics": "^1.3.2",
		"fast-json-stable-stringify": "^2.1.0",
		"flowbite": "^2.5.2",
		"flowbite-svelte": "^0.47.3",
		"flowbite-svelte-icons": "^2.0.2",
		"xxhashjs": "^0.2.2"
	}
}
