{
	"name": "howbazaar",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"features": {
		"ghcr.io/devcontainers/features/node:1": {
			"version": "23"
		}
	},
	"forwardPorts": [5173],
	"appPort": ["5173:5173"],
	"postCreateCommand": "git config --global --add safe.directory $(pwd)",
	"customizations": {
		"vscode": {
			"extensions": [
				"svelte.svelte-vscode",
				"ms-azuretools.vscode-docker"
			]
		}
	}
}
